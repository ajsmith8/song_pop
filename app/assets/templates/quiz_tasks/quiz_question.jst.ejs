<div class = "row">
	<div class = "eight columns centered mobile-six">
		<div class = "radius row panel" style = "margin-top: 0.5em">
			<div class = "twelve columns mobile-six" id = "progress_bars" style = "margin-top: -2em"></div>
			<div class = "tweleve columns mobile-six" style = "text-align: center; margin-top: 2.5em">
				<h5><%= quiz_q.get('question') %></h5>
			</div>
			<% var time = 10; %>

			<div class = "three columns mobile-one"></div>
			<div class = "six columns mobile-four" style = "margin-top: 1.5em">
				<div class = "meter-container"></div>
				<div id = "meter" class = "meter-bar-dark" style = "width: 100%"></div>
				<div id = "time" class = "meter-text"><%= time + ' s' %></div>
			</div>
			<div class = "three columns mobile-one"></div>
			<div class = "twelve columns mobile-six">
				<button id = "start" type = "button" class = "radius dark button show" style = "width: 100%; margin-top: 6em">Fill in the blank -></button>
			</div>
			<div class = "tweleve columns mobile-six" style = "width: 100%; margin-top: 2em">
				<% for (i = 0; i < answers.length; i++) { %>
					<button id = "answer<%= i %>" value = "<%= i %>" type = "button" class = "radius dark button hide" style = "width: 100%">
						<div class = "one columns mobile-one"></div>
						<div class = "ten columns mobile-four">
							<%= answers[i] %>
						</div>
						<div id = "pic" style = "height: 25px"></div>
					</button>
				<% } %>
			</div>
		</div>
	</div>
</div>