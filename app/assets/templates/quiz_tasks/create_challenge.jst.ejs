<div class = "row">
<div class = "twelve columns">
<div class = "panel radius row" style = "margin-top: 0.5em; margin-bottom: 0.5em">
	<div class = "twelve columns centered">
		<% var left = true; %>
		<% for (i = 0; i < friends.length; i++) { %>
			<% if (left) { %>
			<% left = false; %>
				<div class = "row">
					<div class = "six columns mobile-six">
						<div class = "row panel" style = "box-shadow: 0 0 0 rgba(0,0,0,0)">
							<div class = "three columns mobile-two">
								<img src="https://graph.facebook.com/<%= friends[i]["id"] %>/picture"/>
							</div>
							<div class = "three columns mobile-two" style = "text-align: center">
								<%= friends[i]["name"] %>
							</div>
							<div class = "six columns mobile-two">
								<button id = "friend" type = "button" class = "radius primary button" style = "width: 100%; font-size: 10px" value = "<%= i %>">Challenge</button>
							</div>
						</div>
					</div>
			<% } else { %>
			<% left = true; %>
					<div class = "six columns mobile-six">
						<div class = "row panel" style = "box-shadow: 0 0 0 rgba(0,0,0,0)">
							<div class = "three columns mobile-two">
								<img src="https://graph.facebook.com/<%= friends[i]["id"] %>/picture"/>
							</div>
							<div class = "three columns mobile-two" style = "text-align: center">
								<%= friends[i]["name"] %>
							</div>
							<div class = "six columns mobile-two">
								<button id = "friend" type = "button" class = "radius primary button" style = "width: 100%; font-size: 10px" value = "<%= i %>">Challenge</button>
							</div>
						</div>
					</div>
				</div>
			<% } %>
		<% } %>
	</div>
</div>
</div>
</div>